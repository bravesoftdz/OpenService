function Tf_clientes_tipos_000.SeCambioAlgoEnRgtro : Boolean;
begin
  Result := true;

  with SQLQuery_Principal do
  begin
    if falta_algo_por_completar = false then
    begin
      if State = dsEdit then
      begin
        Result := false;

        if UTI_DATOS_TABLA_SeCambioAlgoEnRgtro( SQLQuery_Principal ) = true then
        begin
          Result := true;
        end;

      end;
    end else
    begin
      Result := false;
    end;
  end;
end;

